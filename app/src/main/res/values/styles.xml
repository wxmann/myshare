<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Header-relevant styles -->
    <style name="HeaderSectionLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:weightSum">1.0</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="AddButton">
        <item name="android:layout_weight">0.3</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:src">@android:drawable/ic_input_add</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="HeaderBalancer">
        <item name="android:layout_weight">0.4</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="NextStepButton">
        <item name="android:layout_weight">0.3</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:text">@string/next_step</item>
        <item name="android:src">@android:drawable/ic_input_add</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="HeaderDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">#90909090</item>
    </style>

    <!-- Body-relevant styles -->
    <style name="BodyStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="EntryBodyText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <!--<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>-->
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

</resources>
