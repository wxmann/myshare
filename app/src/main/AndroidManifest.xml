<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jimtang.myshare" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.AddPeopleEntryActivity"
            android:label="@string/app_label" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.AddPeopleDisplayActivity"
            android:label="@string/app_name"/>
        <activity
            android:name=".ui.AddExpenseActivity"
            android:label="@string/app_name"/>
        <activity
            android:name=".ui.CumulativeTotalsActivity"
            android:label="@string/app_name"/>
        <activity
            android:name=".ui.DisplaySharesActivity"
            android:label="@string/app_name"/>

    </application>
</manifest>
